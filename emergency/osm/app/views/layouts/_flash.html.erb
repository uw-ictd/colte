<% if flash[:error] %>
  <div class="flash error">
    <picture>
      <source srcset="<%= image_path "notice.svg" %>" type="image/svg+xml"></source>
      <%= image_tag("notice.png", :srcset => image_path("notice.svg"), :class => "small_icon", :border => 0) %>
    </picture>
    <div class="message"><%= flash[:error] %></div>
  </div>
<% end %>

