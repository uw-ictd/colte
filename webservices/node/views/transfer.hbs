<main role="main" class="container">
    <div class="card mb-3">
      <div class="card-header">
        Transfer
      </div>
      <div class="card-body">
        <p>Current Balance: ${{balance}}</p>
        <form method="post" action="/transfer/transfer"> 
          <div class="form-group">
            <label for="recipient">Recipient Phone Number</label>
            <input type="tel" class="form-control" placeholder="phone number" name="msisdn"></input>
          </div>
          <div class="form-group">
            <label for="amount">Amount To Send</label>
            <input type="text" class="form-control" placeholder="$" name="amount">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
</main>
