<main role="main" class="container">
    <div class="card mb-3">
      <div class="card-header">
        Account
      </div>
      <div class="card-body">
        <p>Current Balance: ${{balance}}</p>
        <p>Current Data: {{data_balance_str}}</p>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-header">
        Packages
      </div>
      <div class="card-body">
        <form action="/purchase/purchase" method="post">
          <p><button name="package" value="0" type="submit" class="btn btn-primary btn-sm">Purchase</button> 10MB for $5</p>
          <p><button name="package" value="1" type="submit" class="btn btn-primary btn-sm">Purchase</button> 100MB for $15</p>
          <p><button name="package" value="2" type="submit" class="btn btn-primary btn-sm">Purchase</button> 1GB for $25</p>
        </form>
      </div>
    </div>
</main>
